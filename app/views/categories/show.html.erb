<br>
<% if notice != nil %>
  <div id="alert" class="alert alert-success">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<div class="col-md-12">
  <div class="card">
    <div class="card-header">
      Categoría
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-1">
          <%= link_to 'Editar', edit_category_path(@category), class: 'btn btn-info' %>
        </div>
        <div class="col-lg-1">
          <%= link_to 'Regresar', categories_path, class: 'btn btn-danger' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-2">
          <strong>Nombre:</strong>
        </div>
        <div class="col-lg-8">
          <%= @category.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
          <strong>Descripción:</strong>
        </div>
        <div class="col-lg-8">
          <%= @category.description %>
        </div>
      </div>
    </div>
  </div>
</div>
